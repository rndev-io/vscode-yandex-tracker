{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"noUnusedLocals": true,
		"lib": [
			"dom",
			"esnext.asynciterable",
			"es6"
		],
		"sourceMap": true,
		"rootDir": "./src",
		"jsx": "react",
		"jsxFactory": "h",
		"typeRoots": [
			"./node_modules/@types",
			"./src/typings/"
		],
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}